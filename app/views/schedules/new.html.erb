<div class="container-fluid">
  <h1 class="ls-title-intro ls-ico-calendar-more">Incluir Atividade</h1>

  <%= form_for @schedule, class: 'ls-form row' do |f| %>


    <label class="ls-label col-md-6">
      <b class="ls-label-text">Servi√ßos</b>
      <% @services.each do |service| %>
        <label class="ls-label-text ls-no-bold">
          <%= check_box_tag 'schedule[services][]', service.id %>
          <%= service.title %>
        </label>
      <% end %>
    </label>

    <label class="ls-label col-md-3">
      <b class="ls-label-text">Cliente</b>
      <%= select_tag 'schedule[client]', options_from_collection_for_select(@clients, "id", "name"), class: 'ls-custom-select', required: true %>
    </label>

    <label class="ls-label col-md-3">
      <b class="ls-label-text">Data Inicio</b>
      <%= f.date_field :date_start, required: true %>
    </label>

    <label class="ls-label col-md-3">
      <b class="ls-label-text">Data Termino</b>
      <%= f.date_field :date_end, required: true %>
    </label>

    <label class="ls-label col-md-4">
      <%= f.submit 'Incluir', class: 'ls-btn-primary ls-float-right' %>
    </label>
  <% end %>
</div>
