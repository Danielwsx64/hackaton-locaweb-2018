<div class="container-fluid">
  <h1 class="ls-title-intro ls-ico-star">Serviço</h1>
  <div class="ls-list">
    <header class="ls-list-header">
      <div class="ls-list-title col-md-9">
        <a href="#"><%= @service.title %></a>
      </div>
      <div class="col-md-3 ls-txt-right">
        <%= link_to 'Editar', edit_service_path(@service), class: 'ls-btn-primary' %>
      </div>
    </header>

    <div class="ls-list-content ">
      <div class="col-xs-12 col-md-6">
        <span class="ls-list-label">Descrição</span>
        <%= @service.description %>
      </div>
      <div class="col-xs-12 col-md-3">
        <span class="ls-list-label">Duração</span>
        <strong><%= @service.duration %></strong>
      </div>
      <div class="col-xs-12 col-md-3">
        <span class="ls-list-label">Valor</span>
        <strong>R$ <%= @service.price %></strong>
      </div>
    </div>
  </div>
</div>
